<%- include('partials/form-header') %>
<div class="ui middle aligned center aligned grid">
  
  <div class="column">

    <form action="/reset" method="POST" class="ui large form">
	
      <div class="ui stacked segment">
		  	    <h2 class="ui teal image header">
  
      <div class="content">
        Reset your password
      </div>
    </h2>
        <div class="field">
          <div class="ui left icon input">
            <i class="mail icon"></i>
            <input type="email" name="email" placeholder="email" required>
          </div>
        </div>
   
      <button class="ui fluid large white submit button" type="submit">Submit</button>


		</div>

      <div class="ui error message"></div>

    </form>

  </div>
</div>
<script>
        $("form").submit(function(){
            $("form").eq(0).addClass("loading");

        });
  $('.message .close')
  .on('click', function() {
    $(this)
      .closest('.message')
      .transition('fade')
    ;
  })
;
</script>
</body>

</html>
