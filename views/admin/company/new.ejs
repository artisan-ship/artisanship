<%- include('../../partials/header') %>

    <div class="ui main text container segment">
        <div class="ui huge header"> Create A New Company</div>
        <form class="ui form" action="/admin/company" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="company[title]" placeholder="Company title">
            </div>
            <div class="field">
                <label>Company Logo</label>
                <input type="text" name="company[logo]" placeholder="Company Logo">
            </div>
            <div class="field">
                <label>Vendor</label>
                <input type="text" name="body" placeholder="description">
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="image" placeholder="image url">
            </div>
            <div class="field">
                <label>Tags</label>
                <input type="text" name="tags" placeholder="tags">
            </div>
       

            <button class="ui basic button" type="submit">
                <i class="edit icon"></i>Add New Company </button>
        </form>
    </div>

    <%- include('../../partials/footer') %>