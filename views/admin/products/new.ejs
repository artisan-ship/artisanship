<%- include('../../partials/header') %>

    <div class="ui main text container segment">
        <div class="ui huge header"> Create New a Product</div>
        <form class="ui form" action="/admin/<%= creator[0]._id %>/products" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="title" placeholder="title">
            </div>
            <div class="field">
                <label>price</label>
                <input type="text" name="price" placeholder="price">
            </div>
            <div class="field">
                <label>Vendor</label>
                <input type="text" name="vendor" placeholder="vendor">
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="image" placeholder="image url">
            </div>
            <div class="field">
                <label>Tags</label>
                <input type="text" name="tags" placeholder="tags">
            </div>
            <div class="field">
                <label></label>
                <textarea name="body" required></textarea>
            </div>

            <button class="ui basic button" type="submit">
                <i class="edit icon"></i> Add Product </button>
        </form>
    </div>

    <%- include('../../partials/footer') %>