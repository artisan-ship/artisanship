<%- include('partials/form-header') %>
<div class="ui middle aligned center aligned grid">
  
  <div class="column">

    <form action="/confirmation" method="POST" class="ui large form">
	
      <div class="ui stacked segment">
		  	    <h2 class="ui teal image header">
  
      <div class="content">
        Confirm Your Email address
      </div>
    </h2>
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <input type="text" name="username" placeholder="username">
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <input type="password" name="password" placeholder="Password">
          </div>
        </div>
		  <button class="ui fluid large white submit button" type="submit">Confirm Account</button>
		</div>

      <div class="ui error message"></div>

    </form>

 
  </div>
</div>
<script>
  $('.message .close')
  .on('click', function() {
    $(this)
      .closest('.message')
      .transition('fade')
    ;
  })
;
</script>
</body>

</html>
