<%- include('../../partials/header') %>
		<% if(products.products.length !== 0){ %>
	<div class='ui container'>

		<div id="indexContainer" class="ui container centered">
			<div class="ui horizontal  raised segments">
				<div class="ui segment">
					<h4>Total Products</h4>
					<p>
						<%= products.products.length %>
					</p>
				</div>
				<div class="ui  segment">
					<h4>Collections</h4>
					<select class="ui dropdown">
						<option value="">Collections</option>
						<option value="1">Shoes</option>
						<option value="0">Hats</option>
					</select>
				</div>
				<div class="ui segment">
					<form action="" method="">
						<h4>Export to CSV</h4>
						<button onclick="download_csv()" class="ui blue  button">Export</button>
					</form>
				</div>
			</div>
		</div>


			<div class="ui raised segment">

				<table class="ui celled table">
					<thead>
						<th>Product title</th>
						<th>Price</th>
						<th>Retail Price</th>
						<th></th>
						<th>Vendor</th>
						<th></th>
						<th>Tags</th>
						<th>collection</th>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
					</thead>
					<tbody>

						<% products.products.forEach(function(product){ %>
							<tr>
								<td>
									<h4 class="ui image header">
										<img src="<%= product.image %>" class="ui mini rounded image">
										<div class="content">
											<a href="/admin/<%= currentUser.id %>/product/<%=product._id %>"><%= product.title %></a>
											
												</div>
											
									</h4>
								</td>
								<td>
									<%= product.price %>
								</td>
								<td>
									<%= product.retail_price %>
								</td>
									<td>
									<%= product.body %>
								</td>
									<td>
									<%= product.vendor %>
								</td>
									<td>
									
								</td>
									<td>
									<%= product.tags %>
								</td>
									<td>
									<%= product.collections %>
								</td>
								
								<td>
									<a href="/<%= product._id %>/edit" class="ui primary basic button">Edit</a>
									<form id="ProductDeleteFormBtn" action="/admin/products/<%= product._id%>?_method=DELETE" method="POST">
										<button class="ui red button">
											Delete
										</button>
									</form>
								</td>

							</tr>

							<% }) %>

					</tbody>
				</table>

				</div>
		

					<% }else { %>
					<div class="ui container">
					<div class="ui placeholder segment">
						<div class="ui icon header">
							<i class="search  icon"></i>
							You Have No Products Ready For Import
						</div>
						<a href="/search" class="ui primary button">Search Products</a>
					</div>

				</div>
						<% } %>

			</div>

<script>

var data = [
  <% products.products.forEach(function(product){ %>
	  ['<%=product.title %>', '<%=product.price %>' , '<%=product.retail_price %>', '<%=product.body %>', '<%=product.vendor %>', '<%=product.image %>', '<%=product.tags %>', '<%=product.collections %>', '<%=product.production_time %>', '<%=product.inventory %>', '<%=product.delivery_time %>','<%=product.shipping %>','<%=product.created %>','<%=product.comments %>'],
	<% }) %>
   ['Foo', 'programmer'],
  
  
];
 
 
function download_csv() {
    var csv = 'title,price,retail_price,body,vendor,image,tags,collection,production_time,inventory,delivery_time,shipping,created,comments\n';
    data.forEach(function(row) {
            csv += row.join(',');
            csv += "\n";
    });
 
    console.log(csv);
    var hiddenElement = document.createElement('a');
    hiddenElement.href = 'data:text/csv;charset=utf-8,' + encodeURI(csv);
    hiddenElement.target = '_blank';
    hiddenElement.download = 'artisanship-product-export-'+Date.now()+'.csv';
    hiddenElement.click();
}
</script>
 