<%- include('../../partials/header') %>

<div class="pusher">
	<div class="ui centered container">
		<div class="ui centered raised segment" id="productPageSegment">
			<div class="ui centered grid">
				<div class="ten wide column">
					<div class="container" style="">
						<p></p>

						<img class="ui fluid image" src="<%= product.image %>" />
					</div>
				</div>
				<div class="six wide column">
					<div class="container">
						<div class="ui segment">
							<h1 class="ui header">
								<%= product.title %>
							</h1>
							
							<p>
								Vendor: <strong><%= product.vendor %></strong>
							</p>
								<h4 class="ui header">
								Unit Price:
								$ <em><%= product.price %></em>
									<p>
											Recommended Retail Price:
								$ <em><%= product.retail_price %></em>
									</p>
								
							</h4>
						

							<form action="/admin/<%= currentUser.id %>/products/<%= product._id %>" method="POST">
								<input type="hidden" name="id" value="<%= product._id %>" />
								<button class="ui button orange" href="#">
									Add product
								</button>
							</form>

						
							<h4 class="ui horizontal divider header">
								<i class="bar chart icon"></i>
								Description
							</h4>
							<p>
								<%= product.body %>
							</p>
							<h4 class="ui horizontal divider header">
								<i class="bar chart icon"></i>
								Specifications
							</h4>

							<table class="ui definition table">
								<tbody>
									<tr>
										<td class="two wide column">Size</td>
										<td>1" x 2"</td>
									</tr>
									<tr>
										<td>Weight</td>
										<td>6 ounces</td>
									</tr>
									<tr>
										<td>Color</td>
										<td>Yellowish</td>
									</tr>
									<tr>
										<td>Odor</td>
										<td>Not Much Usually</td>
									</tr>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
			<%- include('../../partials/comments') %>
		</div>
	</div>
</div>

<%- include('../../partials/footer') %>